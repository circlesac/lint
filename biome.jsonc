{
	"$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
	"files": {
		"includes": [
			"**",
			"!**/dist",
			"!**/coverage",
			"!**/build",
			"!**/node_modules",
			"!**/.vercel",
			"!**/.mastra",
			"!**/.sst",
			"!**/.open-next",
			"!**/.next",
			"!**/*-lock.json",
			"!**/*.lock"
		]
	},
	"formatter": {
		"indentWidth": 4,
		"lineWidth": 180,
		"includes": [
			"**",
			"!**/dist",
			"!**/coverage",
			"!**/build",
			"!**/node_modules",
			"!**/.vercel",
			"!**/.mastra",
			"!**/.sst",
			"!**/.open-next",
			"!**/.next",
			"!**/*-lock.json",
			"!**/*.lock"
		]
	},
	"linter": {
		"includes": [
			"**",
			"!**/dist",
			"!**/coverage",
			"!**/build",
			"!**/node_modules",
			"!**/.vercel",
			"!**/.mastra",
			"!**/.sst",
			"!**/.open-next",
			"!**/.next",
			"!**/*-lock.json",
			"!**/*.lock"
		],
		"rules": {
			"correctness": {
				"noSwitchDeclarations": "off"
			},
			"complexity": {
				"noForEach": "off",
				"noStaticOnlyClass": "off",
				"useOptionalChain": "off",
				"useLiteralKeys": "off"
			},
			"style": {
				"useImportType": "off",
				"useNodejsImportProtocol": "off",
				"noUnusedTemplateLiteral": "off",
				"noNonNullAssertion": "off",
				"useNumberNamespace": "off",
				"useTemplate": "off",
				"useEnumInitializers": "off",
				"noInferrableTypes": "off",
				"noUselessElse": "off",
				"useSingleVarDeclarator": "off",
				"noParameterAssign": "off"
			},
			"suspicious": {
				"noDoubleEquals": "off",
				"noExplicitAny": "off",
				"noImplicitAnyLet": "off",
				"noAssignInExpressions": "off",
				"noGlobalIsNan": "off",
				"noArrayIndexKey": "off"
			},
			"performance": {
				"noDelete": "off",
				"noAccumulatingSpread": "off"
			}
		}
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"javascript": {
		"globals": ["$", "_"],
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"formatter": {
			"enabled": false,
			"trailingCommas": "none",
			"semicolons": "asNeeded"
		}
	},
	"overrides": [
		{
			"includes": ["**/*.json", "**/*.js"],
			"javascript": {
				"formatter": {
					"semicolons": "always"
				}
			},
			"formatter": {
				"indentStyle": "space",
				"indentWidth": 2
			}
		}
	]
}
